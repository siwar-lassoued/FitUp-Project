{% extends 'base.html.twig' %}

{% block title %}Détails du Coach{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Détails du Coach</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th scope="row">ID</th>
                        <td>{{ coach.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Nom</th>
                        <td>{{ coach.nom }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Expérience</th>
                        <td>{{ coach.experience }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Spécialité</th>
                        <td>{{ coach.specialite }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4 d-flex gap-3 justify-content-between">
            <a href="{{ path('app_coach_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
            <a href="{{ path('app_coach_edit', {'id': coach.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Modifier
            </a>
        </div>

        <div class="mt-3">
            {{ include('coach/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}