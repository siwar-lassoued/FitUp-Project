{% extends 'dashboards.base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Liste des Coachs</h1>

        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark text-center">
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Expérience</th>
                    <th>Spécialité</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for coach in coaches %}
                    <tr class="text-center">
                        <td>{{ coach.id }}</td>
                        <td>{{ coach.nom }}</td>
                        <td>{{ coach.experience }}</td>
                        <td>{{ coach.specialite }}</td>
                        <td>
                            <a href="{{ path('app_coach_show', {'id': coach.id}) }}" class="btn btn-info btn-sm">Voir</a>
                            <a href="{{ path('app_coach_edit', {'id': coach.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucun enregistrement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end">
            <a href="{{ path('app_coach_new') }}" class="btn btn-success">Ajouter un nouveau coach</a>
        </div>
    </div>
{% endblock %}
