{% extends 'base.html.twig' %}

{% block title %}User {% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ user.password }}</td>
        </tr>
        </tbody>
    </table>

    <h2>Your RDVs:</h2>
    {% if rDVs is not empty %}
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for rdv in rDVs %}
                <tr>
                    <td>{{ rdv.id }}</td>
                    <td>{{ rdv.date|date('Y-m-d') }}</td>
                    <td>
                        <a href="{{ path('app_rdv_show', {'id': rdv.id}) }}">View</a>
                        <a href="{{ path('app_rdv_edit', {'id': rdv.id}) }}">Edit</a>
                        {{ include('rdv/_delete_form.html.twig', {'rdv': rdv}) }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No RDVs found.</p>
    {% endif %}

    <a href="{{ path('app_user_index') }}">back to list</a>
    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
    {{ include('user/_delete_form.html.twig') }}
{% endblock %}